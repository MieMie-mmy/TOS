<script>

    $(document).ready(function () {

        GetCompanyUpdate_View();

    })

    function GetCompanyUpdate_View()
    {
         $.ajax({
                type: 'GET',

                url: '@Url.Action("_GetTable", "Registrations")',
                dataType: 'json',
                success: function (data) {
                BindFirstTable(data);

                }
                });
    }

    function BindFirstTable(data) {

        var table = $("#Update").DataTable(
            {
                "destroy": true,
                //responsive: false,
                "scroll": false,
                "dom": 'lrtip',
                "bLengthChange": false,
                "aLengthMenu": [20],
                "data": data,
                "language": {

                    url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Japanese.json"
                },
                "pagingType": "full_numbers",
                "data": data,

                "columns": [
                    { "data": "No", orderable: false },
                    { "data": "CompanyCD", orderable: false },
                    { "data": "CompanyName", orderable: false },
                    { "data": "ShortName", orderable: false },
                    { "data": "PresidentName", orderable: false },
                    { "data": "RankingFlg", orderable: false },
                    {},
                    {}

                ],
                "columnDefs": [
                    {
                        "targets": 6,
                        className:"EditDeleteRow",
                        "data": "",
                        "render": function (data, type, row) {

                            return '<a href="@Url.Action("Company_Entry", "Registrations")?id=' + row.CompanyCD + '" style="color:white;" >編集</a>';




                        }
                    },
                    {
                        "targets": 7,
                        className:"EditDeleteRow",
                        "data": "",
                        "render": function (data, type, row) {


                            return '<a href="#"  onclick="DeleteCompanyView(' + row.CompanyCD + ')"  style="color:red;">削除</a>';


                        }
                    },


            ]


            }
        );

    }

</script>


