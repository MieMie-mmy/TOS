<script>

    function DeleteCompanyView(id)
    {
        $.ajax({
            type:'POST',
            url: '@Url.Action("CompanyUpdate_View_Delete", "Registrations")?id=' + id,
            dataType: 'json',
            success: function (data)
            {
                GetCompanyUpdate_View();
            }

        });

    }

</script>




























