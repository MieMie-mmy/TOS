@using System.Data;
@model DataTable
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}
@section Styles
{

}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">ホーム</a><i class="fa fa-angle-right"></i>お知らせ情報</li>
    </ol>
    <div class="inbox-mail">

        <!-- tab content -->
        <div class="tab-content tab-content-in w3">
            <div class="tab-pane text-style active" id="tab1">
                <div class="inbox-right">

                    <div class="mailbox-content">
                        <div class="mail-toolbar clearfix">
                            <div class="float-left">
                                <h1>お知らせ情報</h1>


                            </div>
                            <div class="float-right">


                                <div class="btn-group">
                                    <a class="btn btn-default"><i class="fa fa-angle-left"></i></a>
                                    <a class="btn btn-default"><i class="fa fa-angle-right"></i></a>
                                </div>


                            </div>

                        </div>
                        <table class="table" id="tbinformation">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>


        </div>
        <div class="clearfix"> </div>
    </div>

    @section Scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                var table = $('#tbinformation').DataTable(
                    {
                        "createdRow": function (row, data, dataIndex) {
                            $(row).addClass("table-row");    
                        },
                        columnDefs: [{
                            targets: [0, 1, 2, 3],
                            className: 'table-text'
                        }],
                        "dom": 'lrtip',
                        "bLengthChange": false,
                        "ajax": {
                            "url": "../Home/Get_T_Information",
                            "type": "GET",
                            "datatype": "json",
                            "dataSrc": ""
                        },
                        "columns": [
                            {
                                "data": "Date", "render": function (data, type, row) {
                                    return '<h6>'+ row.Date + '</h6>';

                                },
                            },
                            {
                                "data": "TitleName", "render": function (data, type, row) {
                                    return '<h6><a href="../Home/product_details/' + row.InformationID + '">' + row.TitleName + '</a></h6>';
                                   
                                },
                            },
                            { "data": "InformationType", orderable: false },
                            {
                                "data": "",
                                "render": function (data, type, row) {
                                    return '<h6><a href="../Home/product_details/' + row.InformationID + '"><i class="fa fa-external-link icon-state-warning"></i></a></h6>';
                                },
                            },
                        ],
                    }
                );
            });


        </script>
    }


